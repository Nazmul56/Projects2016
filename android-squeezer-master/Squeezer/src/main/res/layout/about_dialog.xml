<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/about_title"
            style="@style/SqueezerTextAppearance.Large"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:paddingLeft="8dp"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/version_text"
            android:textAppearance="@style/SqueezerTextAppearance.Small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_title"
            android:layout_toRightOf="@id/icon"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/copyright"
            android:textAppearance="@style/SqueezerTextAppearance.Small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/copyright_text"/>

        <TextView
            android:id="@+id/team"
            android:textAppearance="@style/SqueezerTextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/copyright"
            android:paddingTop="8dp"
            android:text="Team"/>

        <TextView
            android:id="@+id/authors"
            android:textAppearance="@style/SqueezerTextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team"
            android:paddingLeft="8dp"
            android:text="Kurt Aaholst\nNik Clayton\nBrad Fitzpatrick"/>

        <TextView
            android:id="@+id/support"
            android:textAppearance="@style/SqueezerTextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/authors"
            android:paddingTop="16dp"
            android:text="Support"/>

        <TextView
            android:textAppearance="@style/SqueezerTextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/support"
            android:autoLink="web"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:text="http://groups.google.com/group/android-squeezer\n\nhttps://nikclayton.github.io/android-squeezer/"/>
    </RelativeLayout>
</ScrollView>
